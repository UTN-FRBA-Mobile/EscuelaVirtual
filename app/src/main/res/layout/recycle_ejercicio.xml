<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<TextView
    android:id="@+id/tv_ejercicio_id"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@color/colorGreen2"
    android:clickable="true"
    android:fontFamily="sans-serif"
    android:gravity="center|start"
    android:includeFontPadding="false"
    android:onClick="gotoEjercicio"
    android:paddingLeft="16dp"
    android:text="@+id/tv_ejercicio_id"
    android:textSize="18sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:gravity="center|end">
    
    <ImageView
        android:id="@+id/preview_id"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <ImageButton
        android:id="@+id/edit_ejercicio_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorGreen2"
        android:layout_marginLeft="10dp"
        android:onClick="trytoEditEjercicio"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/delete_ejercicio_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorGreen2"
        android:onClick="trytoDeleteEjercicio"
        app:srcCompat="@android:drawable/ic_menu_delete" />
</LinearLayout>

</RelativeLayout>